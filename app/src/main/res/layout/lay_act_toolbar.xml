<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shp_bottom_rounded_black"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/act_intro_rl_toolbar_menu"
            android:layout_width="wrap_content"

            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp">

            <LinearLayout
                android:id="@+id/billtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"



                android:orientation="vertical"
                android:padding="@dimen/fontsize_mini"
                >

                <TextView
                    android:visibility="gone"
                    android:id="@+id/act_intro_txv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:padding="10dp"

                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/fontsize_tiny"
                    android:textStyle="bold" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:clickable="false"

                    android:text="My Bills"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/fontsize_small"
                    android:textStyle="bold" />
            </LinearLayout>

        </RelativeLayout>



        <LinearLayout
            android:paddingLeft="87dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="40dp"

                android:layout_height="40dp"

                android:layout_centerVertical="true"
                android:layout_marginEnd="2dp"
                android:elevation="2dp"
                android:scaleType="centerCrop"
                android:padding="1dp"
                android:src="@drawable/ic_bill" />

            <ImageView
                android:layout_width="40dp"

                android:layout_height="40dp"

                android:layout_centerVertical="true"
                android:layout_marginEnd="2dp"
                android:elevation="2dp"
                android:scaleType="centerCrop"
                android:padding="2dp"
                android:src="@drawable/icchart" />
            <ImageView
                android:layout_width="40dp"

                android:layout_height="40dp"

                android:layout_centerVertical="true"
                android:layout_marginEnd="2dp"
                android:elevation="2dp"
                android:scaleType="centerCrop"
                android:padding="1dp"
                android:src="@drawable/ictechni" />
            <com.ast.MyBills.Utils.CircleImageView
                android:layout_width="40dp"

                android:layout_height="40dp"

                android:layout_centerVertical="true"
                android:layout_marginEnd="2dp"
                android:elevation="2dp"
                android:scaleType="centerCrop"
                android:padding="1dp"
                android:src="@drawable/ictips" />
            <ImageView
                android:layout_width="40dp"

                android:layout_height="40dp"

                android:layout_centerVertical="true"
                android:layout_marginEnd="2dp"
                android:elevation="2dp"
                android:scaleType="centerCrop"
                android:padding="1dp"
                android:src="@drawable/icalerts" />
            <com.ast.MyBills.Utils.CircleImageView
                android:layout_width="40dp"

                android:layout_height="40dp"

                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:elevation="2dp"
                android:scaleType="centerCrop"
                android:padding="1dp"
                android:src="@drawable/icsettings" />

            <com.ast.MyBills.Utils.CircleImageView
                android:id="@+id/profile"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:layout_centerVertical="true"
                android:layout_marginEnd="2dp"
                android:elevation="2dp"
                android:scaleType="centerCrop"
                android:padding="1dp"
                android:src="@drawable/icprofile" />




        </LinearLayout>












    </RelativeLayout>
    <!--
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="80dp"


            android:padding="10dp">



        </RelativeLayout>
    -->
</LinearLayout>
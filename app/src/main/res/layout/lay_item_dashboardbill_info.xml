<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout

        android:id="@+id/lay_bill_info_llDetails"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shp_rect_rounded_light_white"
        android:layout_margin="4dp"
        android:orientation="vertical"
        android:padding="5dp">


        <LinearLayout
            android:id="@+id/lay_bill_info_llParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shp_rect_rounded_light_white"
            android:layout_margin="4dp"
            android:orientation="vertical"
            android:padding="5dp">
        <LinearLayout
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="2dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Sr."
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_mini"
                    android:textStyle="bold" />

                <View

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                android:paddingTop="2dp"
                android:paddingBottom="2dp">

                <TextView
                    android:id="@+id/lay_brmi_all_dept_txv_sr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Desc"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_mini" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:text="Bill Type"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_mini"
                    android:textStyle="bold" />

                <View

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"

                android:paddingBottom="2dp">

                <TextView
                    android:id="@+id/lay_bill_info_txv_billtype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="4dp"
                    android:text="Desc"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_mini"
                  />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="2dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:text="Amount"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_mini"
                    android:textStyle="bold" />

                <View

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"

                android:paddingBottom="2dp">

                <TextView
                    android:id="@+id/lay_bill_info_txv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="4dp"
                    android:text="Desc"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_mini" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="2dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Due Date"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_mini"
                    android:textStyle="bold" />

                <View

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"

                android:paddingBottom="2dp">

                <TextView
                    android:id="@+id/lay_bill_info_txv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="4dp"
                    android:text="Desc"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_mini" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:text="Approving Authority for Proposed Change"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_mini"
                    android:textStyle="bold" />

                <View

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"

                android:paddingBottom="2dp">

                <TextView
                    android:id="@+id/lay_brmi_all_dept_txv_approving_authority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingBottom="5dp"
                    android:text="Desc"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_mini" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:text="Status"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_mini"
                    android:textStyle="bold" />

                <View

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"

                android:paddingBottom="2dp">

                <TextView
                    android:id="@+id/lay_bill_info_txv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="1dp"
                    android:text="Desc"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_mini" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Act"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_mini"
                    android:textStyle="bold" />

                <View

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"

                android:paddingBottom="2dp">

                <TextView
                    android:id="@+id/lay_bill_info_txv_act"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="4dp"
                    android:text="Desc"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_mini" />
            </LinearLayout>
        </LinearLayout>

            <TextView
                android:id="@+id/lay_bill_info_txv_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:gravity="start"
                android:paddingLeft="3dp"

                android:text="View"
                android:textColor="@color/black_1"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/fontsize_mini"
                android:textStyle="bold" />
        </LinearLayout>



    </LinearLayout>



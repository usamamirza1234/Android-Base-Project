<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shp_rect_rounded_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="26dp"

        android:paddingEnd="26dp">




        <ast.billmanagment.mybills.MaterialCalendar.materialcalendarview.MaterialCalendarView
            android:id="@+id/dlg_reorder_mcv_calndr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            app:mcv_selectionColor="@color/blue"
            app:mcv_showOtherDates="decorated_disabled" />




    </LinearLayout>
</RelativeLayout>
